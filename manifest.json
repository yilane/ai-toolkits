  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+aitoolkit",
      "url": "/tools/?tool=%s"
    }
  ],
  "share_target": {
    "action": "/tools/custom/word-counter/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/tools/custom/json-formatter/",
      "accept": {
        "application/json": [".json"]
      }
    },
    {
      "action": "/tools/image/compressor/",
      "accept": {
        "image/png": [".png"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/gif": [".gif"],
        "image/webp": [".webp"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred"
} 